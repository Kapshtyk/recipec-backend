{
  // Explicitly tell ESLint extension to watch typescript files for linting errors
  "eslint.validate": ["typescript", "typescriptreact", "typescriptnest", "json"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
}
